@model E_LEARNING.Models.Titre

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var format = ViewBag.format;
}

<h1>Edit</h1>

<h4>Titre</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article_art" class="control-label"></label>
                <input asp-for="Article_art" class="form-control" />
                <span asp-validation-for="Article_art" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="video_art" class="control-label"></label>
                <input asp-for="video_art" class="form-control" />
                <span asp-validation-for="video_art" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="formationId" class="control-label"></label>
                <select asp-for="formationId" class="form-control" >
                    @foreach(var item in format)
            {
                <option value="@item.Id">@item.Name</option>
            }
                            
                </select>
                <span asp-validation-for="formationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

